<NewButton@Button>:
	canvas:
		#Clear
		Color:
			rgb: blue
		Rectangle:
			pos: self.pos
			size: self.size
		Color:
			rgba: grey
		Rectangle:			
			pos: self.x+2.5,self.y-3
			size: self.size
		Color:
			rgba: white
		Rectangle:			
			pos: self.pos
			size: self.texture_size
			texture: self.texture
	font_size:32
	size: self.texture_size
	size_hint:None,None
	padding:4,5
	color: white
